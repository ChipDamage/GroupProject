@{
    ViewBag.Title = "Results";
}
<head>
<script src="~/Scripts/results.js"></script>
</head>

<div id="results">
    <div id="pic_div">
        <img src="~/Content/images/ToKillAMockingbird.jpg" alt="books" height="350">
        <!-- loads picture of book, 350px high -->
    </div>
    <div id="info_div">
        <table id="book_result" class="table table-bordered">
            <tr><td class="subj">Title:</td><td class="deets">To Kill a Mockingbird</td></tr>
            <tr><td class="subj">Author:</td><td class="deets">Harper Lee</td></tr>
            <tr><td class="subj">Year Published:</td> <td class="deets">1960</td></tr>
            <tr><td class="subj">Publisher:</td> <td class="deets">Warner Books, Inc.</td></tr>
            <tr><td class="subj">ISBN-13:</td><td class="deets"><a href="http://isbndb.com/book/to_kill_a_mockingbird_a03" target="_blank">978-0446310789</a></td></tr>            
        </table>
        <!-- Stuff goes in table "book_result" via MVC <-> database
          Like:
            Book name
            Publish date
            Publishing company
            ISBN number, etc
          -->
        <div id="sale_div">
            <h2>Sellers</h2>
            <table id="sourcesTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Vendor</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>