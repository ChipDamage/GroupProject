@{
    ViewBag.Title = "Home Page";
}
    <h2>@ViewBag.Title</h2>
    <div id="content">
        <p>
            Need cheap textbooks? You've come to the right place!
        </p>

 
        
        <form id="search_form" action="~/Home/Results">
            <label for="Search_Input">Search:</label><span class="glyphicon glyphicon-search"></span>
            <input type="text" placeholder="Search for Textbook" name="Search_Input" id="Search_Input" maxlength="50" required>
            <input value="Submit" id="submit" type="submit" class="submit">
        </form>


    </div>